    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String TID = id.getText();
        String FlightName = flightname.getText();
        String FirstName = fname.getText();
        String LastName = lname.getText();
        String Arrival = arrival.getText();
        String Departure = departure.getText();
        String Contact = contact.getText();

        // Create a new Ticket object
        Ticket ticket = new Ticket(TID, FlightName, FirstName, LastName, Arrival, Departure, Contact);

        // Add the new ticket to the ArrayList
        tickets.add(ticket);

        // Display the ticket information
        StringBuilder ticketInfo = new StringBuilder();
        ticketInfo.append("\nTicket ID: ").append(ticket.getTID())
                .append(" Flight Name: ").append(ticket.getFlightName())
                .append(" First Name: ").append(ticket.getFirstName())
                .append(" Last Name: ").append(ticket.getLastName())
                .append(" Arrival: ").append(ticket.getArrival())
                .append(" Departure: ").append(ticket.getDeparture())
                .append(" Contact: ").append(ticket.getContact());

        JOptionPane.showMessageDialog(this, ticketInfo.toString(), "Ticket Details", JOptionPane.INFORMATION_MESSAGE);

    }                                        

