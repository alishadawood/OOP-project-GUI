    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
         // TODO add your handling code here:
        // TODO add your handling code here:
        String originalFilePath ="C:\\Users\\dell\\Desktop\\Flight\\Customer.txt";
         String  tempFilePath="C:\\Users\\dell\\Desktop\\Flight\\Customer_temr.txt";
        String targetID=id.getText();
        try (
            BufferedReader reader = new BufferedReader(new FileReader(originalFilePath));
            BufferedWriter writer = new BufferedWriter(new FileWriter(tempFilePath))
        ) {
            String line;
            boolean recordFound = false;

            // Read each line from the original file
            while ((line = reader.readLine()) != null) {
                // Write lines that do not match the target ID
                if (!line.contains("ID: " + targetID)) {
                    writer.write(line);
                    writer.newLine();
                } else {
                    recordFound = true; // Mark record as found
                }
            }

            if (recordFound) {
                System.out.println("Record with ID " + targetID + " deleted successfully.");
                JOptionPane.showMessageDialog(this,"deeted sucessfuly");
            } else {
                System.out.println("Record with ID " + targetID + " not found.");
                JOptionPane.showMessageDialog(this, "Not found!");
            }
        } catch (IOException e) {
            System.err.println("An error occurred: " + e.getMessage());
        }

        // Replace the original file with the updated file
        File originalFile = new File(originalFilePath);
        File tempFile = new File(tempFilePath);

        if (originalFile.delete() && tempFile.renameTo(originalFile)) {
            System.out.println("File updated successfully.");
        } else {
            System.err.println("An error occurred while updating the file.");
        }

      
    }                                        

