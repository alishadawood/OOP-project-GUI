    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
     String CID = id.getText();
        String FName = fname.getText();
        String LName = lname.getText();
        String PNo = pno.getText();
        String NID = nid.getText();
        String Address = address.getText();
        String Contact = contact.getText();
        String gender = male.isSelected() ? "Male" : female.isSelected() ? "Female" : "";
        String DOB = dob.getText();

        // Create a new Customer object
        Customer customer = new Customer(CID, FName, LName, PNo, NID, Address, Contact, gender, DOB);

        // Add the customer to the ArrayList
        customerList.add(customer);

        // Append the customer data to the file
        File file = new File("C:\\Users\\dell\\Desktop\\Flight\\Customer.txt");
        try (FileWriter writer = new FileWriter(file, true)) {
            writer.write(customer.toFileFormat() + "\n");
            System.out.println("Customer added successfully.");
        } catch (IOException e) {
            System.err.println("Error writing to file: " + e.getMessage());
        }

        // Show a confirmation dialog
        JOptionPane.showMessageDialog(this, "Customer added successfully!");

        // Clear form fields
        clearFormFields();
    }

    // Clear form fields after adding a customer
    private void clearFormFields() {
        id.setText("");
        fname.setText("");
        lname.setText("");
        pno.setText("");
        nid.setText("");
        address.setText("");
        contact.setText("");
        male.setSelected(false);
        female.setSelected(false);
        dob.setText("");
    }                                        

