    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       // Add your handling code here for search button click
       txt.setText(" ");
String CID = id.getText();  // Get the customer ID entered in the text field

// Initialize the file that contains the customer data
File file = new File("C:\\Users\\dell\\Desktop\\Flight\\Customer.txt");

// Variable to track if the record is found
boolean recordFound = false;

try {
    // Read the file to find the specific record
    FileReader reader = new FileReader(file);
    BufferedReader bufferedReader = new BufferedReader(reader);
    String line;
    
    System.out.println("\nSearching for Customer ID: " + CID);
    
    // Loop through each line in the file
    while ((line = bufferedReader.readLine()) != null) {
        // Check if the line contains the Customer ID (CID)
        if (line.contains("Customer ID: " + CID)) {
            // If found, print the corresponding line
            System.out.println("Record Found: ");
            System.out.println(line);  // Print the record (you can also display it in the GUI)
            txt.setText(line);
            recordFound = true;
            break;  // Exit the loop once the record is found
        }
    }
    
    if (!recordFound) {
        System.out.println("Record with Customer ID " + CID + " not found.");
    }
    
    // Close the reader
    bufferedReader.close();
} catch (IOException e) {
    System.err.println("An error occurred: " + e.getMessage());
}

    }                                        

