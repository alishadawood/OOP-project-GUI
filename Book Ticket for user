    class Customer {
        String id;
        String firstName;
        String lastName;
        String contact;
        String gender;
        String fare;
        String tickets;
        String discount;

        public Customer(String id, String firstName, String lastName, String contact, String gender, String fare, String tickets, String discount) {
            this.id = id;
            this.firstName = firstName;
            this.lastName = lastName;
            this.contact = contact;
            this.gender = gender;
            this.fare = fare;
            this.tickets = tickets;
            this.discount = discount;
        }

        public String getId() {
            return id;
        }

        public void setId(String id) {
            this.id = id;
        }

        public String getFirstName() {
            return firstName;
        }

        public void setFirstName(String firstName) {
            this.firstName = firstName;
        }

        public String getLastName() {
            return lastName;
        }

        public void setLastName(String lastName) {
            this.lastName = lastName;
        }

        public String getContact() {
            return contact;
        }

        public void setContact(String contact) {
            this.contact = contact;
        }

        public String getGender() {
            return gender;
        }

        public void setGender(String gender) {
            this.gender = gender;
        }

        public String getFare() {
            return fare;
        }

        public void setFare(String fare) {
            this.fare = fare;
        }

        public String getTickets() {
            return tickets;
        }

        public void setTickets(String tickets) {
            this.tickets = tickets;
        }

        public String getDiscount() {
            return discount;
        }

        public void setDiscount(String discount) {
            this.discount = discount;
        }

        @Override
        public String toString() {
            return "ID: " + id + ", First Name: " + firstName + ", Last Name: " + lastName +
                   ", Contact: " + contact + ", Gender: " + gender + ", Fare: " + fare +
                   ", Tickets: " + tickets + ", Discount: " + discount;
        }
    }

