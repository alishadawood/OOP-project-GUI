    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
         String ID = cid.getText();
    String FName = fname.getText();
    String LName = lname.getText();
    String Contact = contact.getText();
    String Gender = gender.getText();
    String Fare = fire.getText();
    String Tickets = tticket.getText();
    String Discount = discount.getText();

    // Create a new Customer object and add it to the list
    Customer newCustomer = new Customer(ID, FName, LName, Contact, Gender, Fare, Tickets, Discount);
    customerList.add(newCustomer);

    // Append the new customer data to the file
    File file = new File("C:\\Users\\dell\\Desktop\\Flight\\CustomerData.txt");
    try (FileWriter writer = new FileWriter(file, true)) {
        writer.write(newCustomer.toString() + System.lineSeparator());
        System.out.println("Customer added to file and ArrayList successfully.");
        JOptionPane.showMessageDialog(this, "Tictek book sucessfully!");
    } catch (IOException e) {
        System.err.println("An error occurred while writing to the file: " + e.getMessage());
    }

    // Optionally clear the text fields after adding
    cid.setText("");
    fname.setText("");
    lname.setText("");
    contact.setText("");
    gender.setText("");
    fire.setText("");
    tticket.setText("");
    discount.setText("");
    }                                        

    private void jButton5ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String targetID = cid.getText();

// Check if the record exists and remove it from the ArrayList
boolean recordFound = false;
for (int i = 0; i < customerList.size(); i++) {
    if (customerList.get(i).getId().equals(targetID)) {
        customerList.remove(i);
        recordFound = true;
        break;
    }
}

if (recordFound) {
    // Rewrite the file with updated ArrayList
      File file = new File("C:\\Users\\dell\\Desktop\\Flight\\CustomerData.txt");
    try (BufferedWriter writer = new BufferedWriter(new FileWriter(filePath))) {
        for (Customer customer : customerList) {
            writer.write(customer.toString());
            writer.newLine();
        }
        System.out.println("Record with ID " + targetID + " deleted successfully from both ArrayList and file.");
        JOptionPane.showMessageDialog(this, "Ticket cancel successfully!");
    } catch (IOException e) {
        System.err.println("An error occurred while updating the file: " + e.getMessage());
    }
} else {
    System.out.println("Record with ID " + targetID + " not found.");
}

// Clear the input field after operation
cid.setText("");
    }                                        

    private void calculatefareActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
        try {
        // Get input values from text fields
        double fare = Double.parseDouble(fire.getText()); // Fare per ticket
        int totalTickets = Integer.parseInt(tticket.getText()); // Number of tickets
        double discountt = Double.parseDouble(discount.getText()); // Discount percentage (e.g., 10 for 10%)

        // Calculate the total fare
        double totalFare = fare * totalTickets;

        // Apply discount
        double discountAmount = (totalFare * discountt) / 100;
        double finalFare = totalFare - discountAmount;

        // Display the final fare in the text field
        tfair.setText(String.format("%.2f", finalFare)); // Display with two decimal places
    } catch (NumberFormatException e) {
        // Handle invalid input (non-numeric values)
        JOptionPane.showMessageDialog(this, "Please enter valid numbers for Fare, Tickets, and Discount.", "Input Error", JOptionPane.ERROR_MESSAGE);
    }
    }                                             

