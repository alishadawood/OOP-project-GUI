    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
          String customerId = lname.getText();
String firstName = cid.getText();
String lastName = fname.getText();
String flightNumber = filghtno.getText();
String departure = duration.getText();
String duration = fare.getText();
String dateOfFlight = dof.getText();
String seats = seat.getText();
String Fare = fare.getText();

String data = "\nCustomer ID: " + customerId + 
              " First Name: " + firstName + 
              " Last Name: " + lastName + 
              " Flight Number: " + flightNumber + 
              " Departure: " + departure + 
              " Duration: " + duration + 
              " Date of Flight: " + dateOfFlight + 
              " Seats: " + seats + 
              " Fare: " + Fare;

File file = new File("C:\\Users\\dell\\Desktop\\Flight\\FlightDetails.txt");

try {
    // Write data to file
    FileWriter writer = new FileWriter(file, true);
    writer.write(data);
    writer.close();
    System.out.println("Data successfully written to: " + file.getAbsolutePath());

    // Read the data back from the file to verify
    FileReader reader = new FileReader(file);
    int character;
    System.out.println("\nReading data from the file:");
    while ((character = reader.read()) != -1) {
        System.out.print((char) character);
    }
    reader.close();
} catch (IOException e) {
    System.err.println("An error occurred: " + e.getMessage());
}
    }                                        

